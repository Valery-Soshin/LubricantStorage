@page "{id}"
@using LubricantStorage.Core
@model LubricantStorage.UI.Web.Pages.Lubricants.EditModel
@{
    ViewData["Title"] = "Редактировать масло";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <hr />

    <form method="post" class="needs-validation" novalidate>
        <input type="hidden" asp-for="Lubricant.Id" />

        <div class="row">
            <div class="col-md-6">
                <h4>Основная информация</h4>

                <div class="mb-3">
                    <label asp-for="Lubricant.Name" class="form-label">Наименование</label>
                    <input asp-for="Lubricant.Name" class="form-control" required />
                    <span asp-validation-for="Lubricant.Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Lubricant.ApplicationType" class="form-label">Тип масла по области применения</label>
                    <select asp-for="Lubricant.ApplicationType" class="form-select" required>
                        <option value="">Выберите тип...</option>
                        <option value="@LubricantApplicationType.Motor">Моторные масла</option>
                        <option value="@LubricantApplicationType.Transmission">Трансмиссионные масла</option>
                        <option value="@LubricantApplicationType.Hydraulic">Гидравлические масла</option>
                        <option value="@LubricantApplicationType.Turbine">Турбинные масла</option>
                        <option value="@LubricantApplicationType.Compressor">Компрессорные масла</option>
                        <option value="@LubricantApplicationType.Gear">Редукторные масла</option>
                        <option value="@LubricantApplicationType.Industrial">Промышленные масла</option>
                        <option value="@LubricantApplicationType.Biodegradable">Биологические масла</option>
                    </select>
                    <span asp-validation-for="Lubricant.ApplicationType" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-6">
                <h4>Характеристики масла</h4>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Lubricant.Characteristics.KinematicViscosity40C" class="form-label">Вязкость при 40°C (мм²/с)</label>
                        <input asp-for="Lubricant.Characteristics.KinematicViscosity40C" type="number" step="0.01" class="form-control" required />
                        <span asp-validation-for="Lubricant.Characteristics.KinematicViscosity40C" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Lubricant.Characteristics.KinematicViscosity100C" class="form-label">Вязкость при 100°C (мм²/с)</label>
                        <input asp-for="Lubricant.Characteristics.KinematicViscosity100C" type="number" step="0.01" class="form-control" required />
                        <span asp-validation-for="Lubricant.Characteristics.KinematicViscosity100C" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Lubricant.Characteristics.ViscosityIndex" class="form-label">Индекс вязкости</label>
                        <input asp-for="Lubricant.Characteristics.ViscosityIndex" type="number" class="form-control" required />
                        <span asp-validation-for="Lubricant.Characteristics.ViscosityIndex" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Lubricant.Characteristics.PourPoint" class="form-label">Темп. застывания (°C)</label>
                        <input asp-for="Lubricant.Characteristics.PourPoint" type="number" step="0.1" class="form-control" required />
                        <span asp-validation-for="Lubricant.Characteristics.PourPoint" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <h5>Температурные характеристики</h5>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Lubricant.Characteristics.FlashPoint" class="form-label">Темп. вспышки (°C)</label>
                        <input asp-for="Lubricant.Characteristics.FlashPoint" type="number" step="0.1" class="form-control" required />
                        <span asp-validation-for="Lubricant.Characteristics.FlashPoint" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Lubricant.Characteristics.EvaporationTemperature" class="form-label">Темп. испарения (°C)</label>
                        <input asp-for="Lubricant.Characteristics.EvaporationTemperature" type="number" step="0.1" class="form-control" required />
                        <span asp-validation-for="Lubricant.Characteristics.EvaporationTemperature" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <h5>Физико-химические свойства</h5>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Lubricant.Characteristics.Density" class="form-label">Плотность (г/см³)</label>
                        <input asp-for="Lubricant.Characteristics.Density" type="number" step="0.0001" class="form-control" required />
                        <span asp-validation-for="Lubricant.Characteristics.Density" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Lubricant.Characteristics.AcidNumber" class="form-label">Кислотное число (TAN)</label>
                        <input asp-for="Lubricant.Characteristics.AcidNumber" type="number" step="0.01" class="form-control" required />
                        <span asp-validation-for="Lubricant.Characteristics.AcidNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <h5>Дополнительные характеристики</h5>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Lubricant.Characteristics.BaseNumber" class="form-label">Щелочное число (TBN)</label>
                        <input asp-for="Lubricant.Characteristics.BaseNumber" type="number" step="0.01" class="form-control" required />
                        <span asp-validation-for="Lubricant.Characteristics.BaseNumber" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Lubricant.Characteristics.SulfatedAshContent" class="form-label">Сульфатная зольность (%)</label>
                        <input asp-for="Lubricant.Characteristics.SulfatedAshContent" type="number" step="0.01" class="form-control" required />
                        <span asp-validation-for="Lubricant.Characteristics.SulfatedAshContent" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <h5>Состав и свойства</h5>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Lubricant.Characteristics.WaterContent" class="form-label">Содержание воды (%)</label>
                        <input asp-for="Lubricant.Characteristics.WaterContent" type="number" step="0.01" class="form-control" required />
                        <span asp-validation-for="Lubricant.Characteristics.WaterContent" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label asp-for="Lubricant.Characteristics.Contaminants" class="form-label">Содержание загрязнений (%)</label>
                        <input asp-for="Lubricant.Characteristics.Contaminants" type="number" step="0.01" class="form-control" required />
                        <span asp-validation-for="Lubricant.Characteristics.Contaminants" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col-md-6 mb-3">
                <label asp-for="Lubricant.Characteristics.OxidativeStability" class="form-label">Окислительная стабильность</label>
                <input asp-for="Lubricant.Characteristics.OxidativeStability" type="number" step="0.01" class="form-control" required />
                <span asp-validation-for="Lubricant.Characteristics.OxidativeStability" class="text-danger"></span>
            </div>

            <div class="col-md-6 mb-3">
                <label asp-for="Lubricant.Characteristics.AdditiveComposition" class="form-label">Аддитивный состав</label>
                <input asp-for="Lubricant.Characteristics.AdditiveComposition" class="form-control" />
                <span asp-validation-for="Lubricant.Characteristics.AdditiveComposition" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Lubricant.Characteristics.MaterialCompatibility" class="form-label">Совместимость с материалами</label>
            <textarea asp-for="Lubricant.Characteristics.MaterialCompatibility" class="form-control" rows="2"></textarea>
            <span asp-validation-for="Lubricant.Characteristics.MaterialCompatibility" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-page="Index" class="btn btn-secondary">Назад к списку</a>
            <button type="submit" class="btn btn-primary">Сохранить изменения</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('.needs-validation');

            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }

                form.classList.add('was-validated');
            }, false);
        });
    </script>
}